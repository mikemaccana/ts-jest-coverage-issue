{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "lib": ["ES2021"],
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.steps.ts"]
}
